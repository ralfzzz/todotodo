<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootatrap v.5.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <!-- CSS Style -->
    <link rel="stylesheet" href="/css/style.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <title>tododo</title>
</head>
<body>
    <!-- Header -->
    <div class="container-fluid nav-bar mb-5 px-5">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-2 me-auto px-0">
                <ul class="nav justify-content-center">
                    <li>
                        <a class="nav-link text-dark fs-2 fw-bold" href="/">tododo</a>
                    </li>
                </ul>
                </div>
                <div class="col-md-2 px-0">
                    <ul class="nav justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark <%= active=='todo' ? 'active' : ''%>" href="/">Personal Todo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark <%= active=='work' ? 'active' : '' %>" href="/work">Work Todo</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Input Todo -->
    <% if (status!=="success") { %>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-8">
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong><%= status %></strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
            </div>
        </div>
    </div>
    <% } %>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <% if (active=='todo') { %>
                    <form action="/addTodo" method="POST">
                <% } else {%>
                    <form action="/addWorkTodo" method="POST">
                <% } %>
                <div class="input-group mb-3 shadow">
                        <% if (active=='todo') { %>
                            <input type="hidden" name="add" value="todo">
                        <% } else {%>
                            <input type="hidden" name="add" value="work">
                        <% } %>
                        <input type="text" class="form-control rounded-start" placeholder="add tododo..." name="todo" required autofocus>
                        <button class="btn btn-primary" type="submit"><i class="fa-solid fa-calendar-plus"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Card Todo -->
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card mx-auto border-0 shadow">
                    <ul class="list-group list-group-flush border-0">
                    <% for( var i = 0; i < todo.length; i++){ %>
                            <li class="list-group-item d-flex justify-content-between <%= check[i] %>" id="<%= todo[i] %>">
                                <div class="list">
                                    <p class="form-check-label pe-1 m-0">
                                        <i class="fa-solid fa-thumbtack pe-2"></i><%= todo[i] %>
                                    </p>
                                </div>
                                <div class="button d-flex gap-1">
                                    <form action="/checked" method="post">
                                        <% if (active=='todo') { %>
                                            <input type="hidden" name="checked" value="todo">
                                        <% } else {%>
                                            <input type="hidden" name="checked" value="work">
                                        <% } %>
                                        <input type="hidden" value="<%= i %>" name="check">
                                        <button class="badge bg-success border-0" type="submit"><i class="fa-solid fa-check"></i></button>
                                    </form>
                                    <% if (active=='todo') { %>
                                            <form action="/deleteTodo" method="post">
                                            <input type="hidden" name="deleted" value="todo">
                                        <% } else {%>
                                            <form action="/deleteWorkTodo" method="post">
                                            <input type="hidden" name="deleted" value="work">
                                        <% } %>
                                        <input type="hidden" value="<%= todo[i] %>" name="deletedTodo">
                                        <button class="badge bg-danger border-0" type="submit"><i class="fa-regular fa-trash-can"></i></button>
                                    </form>
                                </div>
                            </li>
                    <% } %>
                      
                    </ul>
                  </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
    <div class="container-fluid footer mt-5 <%= todo.length >= 13 ? 'sticky-bottom' : 'fixed-bottom' %>">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <p class="text-dark fw-bold d-block text-center py-3 my-auto">Copyright Â© <%= new Date().getFullYear(); %> by ralfzzz</p>
            </div>
        </div>
    </div>
</body>
<!-- jQuery v.3.7 -->
<script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
<!-- JS -->
<script src="/js/script.js"></script>
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</html>