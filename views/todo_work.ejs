<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootatrap v.5.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <!-- CSS Style -->
    <link rel="stylesheet" href="/css/style.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <title>tododo</title>
</head>
<body>
    <!-- Header -->
    <div class="container-fluid nav-bar mb-5 px-5">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-2 me-auto px-0">
                <ul class="nav justify-content-center">
                    <li>
                        <a class="nav-link text-dark fs-2 fw-bold" href="/">tododo</a>
                    </li>
                </ul>
                </div>
                <div class="col-md-2 px-0">
                    <ul class="nav justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/">Personal Todo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark <%= active %>" href="/work">Work Todo</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Input Todo -->
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form action="/addWorkTodo" method="POST">
                <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="add tododo..." name="todo" required>
                        <button class="btn btn-primary" type="submit"><i class="fa-solid fa-calendar-plus"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Card Todo -->
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card mx-auto border-0">
                    <ul class="list-group list-group-flush border-0">
                    <% for( var i = 0; i < workTodo.length; i++){ %>
                            <li class="list-group-item d-flex justify-content-between" id="<%= workTodo[i] %>">
                                <div class="list">
                                    <p class="form-check-label p-0 m-0">
                                        <%= workTodo[i] %>
                                    </p>
                                </div>
                                <div class="button d-flex gap-1">
                                    <form action="/checked" method="post">
                                        <button class="badge bg-success border-0" type="submit"><i class="fa-solid fa-check"></i></button>
                                    </form>
                                    <form action="/delete" method="post">
                                        <input type="hidden" value="<%= workTodo[i] %>" name="deletedTodo">
                                        <button class="badge bg-danger border-0" type="submit"><i class="fa-regular fa-trash-can"></i></button>
                                    </form>
                                </div>
                            </li>
                    <% } %>
                      
                    </ul>
                  </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
    <div class="container-fluid footer sticky-bottom mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <p class="text-dark fw-bold d-block text-center py-3 my-auto">Copyright Â© 2023 by ralfzzz</p>
            </div>
        </div>
    </div>
</body>
<!-- jQuery v.3.7 -->
<script src="https://code.jquery.com/jquery-3.7.0.min.js" integrity="sha256-2Pmvv0kuTBOenSvLm6bvfBSSHrUJ+3A7x6P5Ebd07/g=" crossorigin="anonymous"></script>
<!-- JS -->
<script src="/js/script.js"></script>
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</html>